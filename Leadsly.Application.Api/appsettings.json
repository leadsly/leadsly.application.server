{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Verbose",
        "System": "Verbose",
        "Microsoft.AspNetCore.Authentication": "Verbose",
        "Microsoft.EntityFrameworkCore.Database.Command": "Verbose"
      }
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "restrictedToMinimumLevel": "Verbose",
          "pathFormat": "Logs\\log-{Date}.json",
          "textFormatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "fileSizeLimitBytes": 2147483648,
          "retainedFileCountLimit": 2,
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "===> {Timestamp:HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "AllowedOrigins": "",
  "JwtIssuerOptions": {
    "Issuer": "",
    "Audience": ""
  },
  "ClientOptions": {
    "Address": "http://localhost:4200",
    "SignUpUrl": "/auth/sign-up"
  },
  "UserRegistrationOptions": {
    "Token": {
      "LifeSpanInDays":  3
    }
  },
  "EmailServiceOptions": {
    "SystemAdminEmail": "oskar@leadsly.com",
    "PasswordReset": {
      "EmailSubject": "Password Reset"
    },
    "VerifyEmail": {
      "EmailSubject": "Verify Email"
    },
    "ChangeEmail": {
      "EmailSubject": "Email Change Request"
    },
    "RegisterEmail": {
      "EmailSubject":  "Welcome to Leadsly!"
    }
  },
  "TwoFactorAuthDisplayAppName": "OdiamDotNetApiStarter",
  "CloudPlatformConfigurationOptions": {
    "AwsOptions": {
      "Region": "us-east-1",
      "EcsTaskDefinitionConfigOptions": {
        "RequiresCompatibilities": [ "FARGATE" ],
        "ContainerDefinitions": [
          {
            "PortMappings": [
              {
                "ContainerPort": 80,
                "Protocol": "tcp"
              }
            ],
            "Image": "public.ecr.aws/x7f5y5s0/s2scom/assistant:latest"
          }
        ],
        "Cpu": "256",
        "Memory": "512",
        "ExecutionRoleArn": "arn:aws:iam::709251838882:role/EcsTaskExecutionRole",
        "NetworkMode": "awsvpc"
      },
      "EcsServiceDiscoveryConfigOptions": {
        "NamespaceId": "ns-hvt6asefpzv33yl6",
        "Name": "leadsly-private",
        "DnsRecordTTL": 300,
        "DnsRecordType": "A"
      },
      "EcsServiceConfigOptions": {
        "AssignPublicIp": "ENABLED",
        "LaunchType": "FARGATE",
        "ClusterArn": "arn:aws:ecs:us-east-1:709251838882:cluster/default",
        "DesiredCount": 1,
        "Subnets": [ "subnet-049bf059384e86947", "subnet-0f41f5f070cc120b9" ],
        "SecurityGroups": [],
        "SchedulingStrategy": "REPLICA"
      }
    }
  }
}
