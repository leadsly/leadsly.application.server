{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=leadsly;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "PostgresOptions": {
    "Database": "leadsly",
    "Host": "leadsly-test.c28rejcg17j0.us-east-1.rds.amazonaws.com",
    "Port": 5432,
    "UserId": "leadsly_db_user"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "Microsoft.AspNetCore.Authentication": "Error",
        "Microsoft.EntityFrameworkCore.Database.Command": "Error",
        "Hangfire": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "restrictedToMinimumLevel": "Warning",
          "pathFormat": "Logs\\log-{Date}.json",
          "textFormatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "fileSizeLimitBytes": 2147483648,
          "retainedFileCountLimit": 2,
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "===> {Timestamp:HH:mm:ss.fff zzz} [{RequestId}] [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "AllowedOrigins": "http://localhost:4200",
  "JwtIssuerOptions": {
    "Issuer": "https://localhost:5201",
    "Audience": "http://localhost:4200"
  },
  "ClientOptions": {
    "Address": "http://localhost:4200"
  },
  "EmailServiceOptions": {
    "SystemAdminEmail": "oskar@leadsly.io",
    "PasswordReset": {
      "EmailSubject": "Password Reset"
    },
    "VerifyEmail": {
      "EmailSubject": "Verify Email"
    },
    "ChangeEmail": {
      "EmailSubject": "Email Change Request"
    },
    "RegisterEmail": {
      "EmailSubject": "Welcome to Leadsly!"
    }
  },
  "TwoFactorAuthDisplayAppName": "OdiamDotNetApiStarterDev",
  "RabbitMQConfigOptions": {
    "RoutingKey": "{halId}.{purpose}",
    "ConnectionFactoryConfigOptions": {
      "UserName": "oski",
      "Password": "password",
      "HostName": "localhost",
      "VirtualHost": "/",
      "Port": 5672,
      "ClientProvidedName": "[Publisher] hal_id:{halId} queue:{queue}"
    },
    "ExchangeConfigOptions": {
      "Name": "leadsly.active.campaigns",
      "ExchangeType": "direct"
    },
    "QueueConfigOptions": {
      "AutoAcknowledge": false,
      "Name": "{halId}.{queueName}"
    }
  },
  "HalConfigOptions": {
    "HostName": "localhost",
    "Port": 5020
  }
}
